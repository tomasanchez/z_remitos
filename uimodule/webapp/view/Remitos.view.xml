<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:semantic="sap.f.semantic" xmlns:fb="sap.ui.comp.filterbar" xmlns:table="sap.ui.table" id="remitosView" height="100%" controllerName="com.profertil.Remitos.controller.Remitos">

	<semantic:SemanticPage id="mySemanticPage" headerPinnable="false" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false" titleAreaShrinkRatio="1:1.6:1.6" showFooter="{/showFooter}" class="sapUiNoContentPadding">

		<!-- Title Heading-->
		<semantic:titleHeading>
			<Title id="headerTitle" text="{i18n>remitosTitle}"/>
		</semantic:titleHeading>

		<!-- TitleExpanded content-->
		<semantic:titleSnappedContent>
			<Text id="snappedTitleText" text="{i18n>remitosTitle}"/>
		</semantic:titleSnappedContent>

		<!-- TitleSnapped content-->
		<semantic:titleExpandedContent>
			<Text id="snappedTitle" text="{i18n>remitosTitle}"/>
		</semantic:titleExpandedContent>

		<!-- Header Content -->
		<semantic:headerContent>
    			<!-- Filter Bar -->
			<fb:FilterBar id="filterBar" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiNoMargin" reset="onReset" search="onSearch" showGoOnFB="false" showRestoreButton="false" showClearButton="false" useToolbar="false" showFilterConfiguration="false">
				<fb:filterGroupItems>

          					<fb:FilterGroupItem groupName="__$INTERNAL$" name="fecha" label="Fecha" partOfCurrentVariant="true" visibleInFilterBar="true" mandatory="false" id="filter0">
						<fb:control>
            <DateRangeSelection id="slDate" placeholder="Seleccione un rango de fechas" valueState="None" change=".onChangeValidation" valueStateText="{i18n>requiredField}"/>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem groupName="__$INTERNAL$" name="centro" label="Centro" partOfCurrentVariant="true" visibleInFilterBar="true" mandatory="false" id="filter1">
						<fb:control>
							<ComboBox id="werksCB" showSecondaryValues="true" placeholder="Seleccione un centro de costo" change=".onSelection" items="{/CentrosSet}">
                <core:ListItem id="werksCB-item" key="{Werks}" text="{Name1}" additionalText="{Werks}"/>
							</ComboBox>
						</fb:control>
					</fb:FilterGroupItem>

          	<fb:FilterGroupItem groupName="__$INTERNAL$" name="acuerdos" label="Acuerdo" partOfCurrentVariant="true" visibleInFilterBar="true" mandatory="false" id="filter2">
						<fb:control>
							<Input id="acuerdoInput" placeholder="Ingrese acuerdo"/>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</semantic:headerContent>

		<!-- Content -->
		<semantic:content>
      <VBox id="contentContainer" fitContainer="true" alignContent="Center" alignItems="Center" class="sapUiNoContentPadding">

        <sap.ui.comp.smarttable:SmartTable 
            entitySet="RemitosSet"
            xmlns:sap.ui.comp.smarttable="sap.ui.comp.smarttable"
            width="100%" direction="Column" fitContainer="true" 
            tableType="ResponsiveTable" 
            header="{i18n>remitosTableTitle}" 
            enableAutoBinding="true" 
            id="RemitosSet" 
            smartFilterId="filterbar" 
            useVariantManagement="false"
            initiallyVisibleFields="Fecha,Remito,Centro,Negocio"
            justifyContent="Center"
            alignContent="Center"
            >
          </sap.ui.comp.smarttable:SmartTable>
          
      </VBox>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>
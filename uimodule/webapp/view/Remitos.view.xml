<mvc:View xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:semantic="sap.f.semantic" xmlns:fb="sap.ui.comp.filterbar" xmlns:table="sap.ui.table" id="remitosView" height="100%" controllerName="com.profertil.Remitos.controller.Remitos">

	<semantic:SemanticPage id="mySemanticPage" headerPinnable="false" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false" titleAreaShrinkRatio="1:1.6:1.6" showFooter="{/showFooter}" class="sapUiNoContentPadding">

		<!-- Title Heading-->
		<semantic:titleHeading>
			<Title id="headerTitle" text="{i18n>remitosTitle}"/>
		</semantic:titleHeading>

		<!-- TitleExpanded content-->
		<semantic:titleSnappedContent>
			<Text id="snappedTitleText" text="{i18n>remitosTitle}"/>
		</semantic:titleSnappedContent>

		<!-- TitleSnapped content-->
		<semantic:titleExpandedContent>
			<Text id="snappedTitle" text="{i18n>remitosTitle}"/>
		</semantic:titleExpandedContent>

		<!-- Header Content -->
		<semantic:headerContent>
    <!-- Filter Bar -->
    <smartFilterBar:SmartFilterBar id="filterbar" persistencyKey="UniqueAndStablePersistencyKey" considerSelectionVariants="true" entitySet="RemitosSet" useDateRangeType="true" deltaVariantMode="false" showFilterConfiguration="false" showRestoreButton="false" showRestoreOnFB="true">
      <!-- Controls -->
      <smartFilterBar:controlConfiguration>
        <!-- Date Control -->
        <smartFilterBar:ControlConfiguration id="datePickerCtrl" key="Fecha" index="0" label="{i18n>dateDpLabel}" groupId="_BASIC" width="300px" visibleInAdvancedArea="true">
          <smartFilterBar:customControl>
            <DateRangeSelection id="slDate" valueState="None" change=".onChangeValidation" valueStateText="{i18n>requiredField}"/>
          </smartFilterBar:customControl>
        </smartFilterBar:ControlConfiguration>
        <!-- Werks Control -->
        <smartFilterBar:ControlConfiguration id="werksCtrl" key="Centro" index="3" label="{i18n>werksSlLabel}" groupId="_BASIC" width="300px" visibleInAdvancedArea="true">
          <smartFilterBar:customControl>
            <ComboBox id="werksCB" showSecondaryValues="true" placeholder="Seleccione un centro de costo" items="{/CentrosSet}">
              <core:ListItem id="werksCB-item" key="{Werks}" text="{Name1}" additionalText="{Werks}"/>
            </ComboBox>
          </smartFilterBar:customControl>
        </smartFilterBar:ControlConfiguration>
      </smartFilterBar:controlConfiguration>

      <!-- layout data used to make the table growing but the filter bar fixed -->
      <smartFilterBar:layoutData>
        <FlexItemData xmlns="sap.m" id="Data" shrinkFactor="0"/>
      </smartFilterBar:layoutData>
              <!--<Label id="labelDate" text="Rango de Fecha de Factura" labelFor="picker1"/>
                  <DateRangeSelection xmlns="sap.m" id="picker1"/>-->
 
              <!--<Label id="labelCentro" text="Centro" labelFor="box0"/>
                  <ComboBox xmlns="sap.m" id="box0">
                  <items>
                      <core:Item xmlns:core="sap.ui.core" key="item-1-key" text="Item 1 Text" id="item3"/>
                      <core:Item xmlns:core="sap.ui.core" key="item-2-key" text="Item 2 Text" id="item4"/>
                      </items>     
                  </ComboBox>


 
                  <Label id="labelAcuerdo" text="Acuerdo" labelFor="input2"/>
              <Input xmlns="sap.m" id="input2"/>-->
 
              </smartFilterBar:SmartFilterBar>
		</semantic:headerContent>

		<!-- Content -->
		<semantic:content>
      <VBox id="contentContainer" fitContainer="true" alignContent="Center" alignItems="Center" class="sapUiNoContentPadding">
        <!-- Smart Table -->
        <sap.ui.comp.smarttable:SmartTable 
        xmlns:sap.ui.comp.smarttable="sap.ui.comp.smarttable" 
        entitySet="RemitosSet" 
        width="100%" 
        direction="Column" 
        fitContainer="true" 
        tableType="ResponsiveTable" 
        header="{i18n>remitosTableTitle}" 
        enableAutoBinding="true" 
        id="RemitosSet"
        smartFilterId="filterbar"
        beforeRebindTable="onBeforeRebindTable"
        useVariantManagement="false" 
        initiallyVisibleFields="Fecha,Xblnr,Werks,WerksName1,AcNegocio,Entrega,Arktx,Kdmat" 
        justifyContent="Center" 
        alignContent="Center">
          <!-- Custom Data Table -->
          <Table id="smartTableCustom">
            <columns>
                <!-- Custom Date Column -->
              <Column id="FechaCol" width="100px" hAlign="Begin">
                <customData>
                  <core:CustomData 
                    key="p13nData" 
                    value='\{"columnKey": "Fecha", "maxLength": "10","columnIndex":"0", "isCurrency": false, "leadingProperty": "Fecha", "sortProperty": "Fecha", "type": "string"}' />
                </customData>
                <Label id="header-fecha-label" text="{/#Remitos/Fecha/@sap:label}" />
              </Column>
              <!-- Custom Werks Column -->
              <Column id="WerksCol" width="80px" hAlign="End">
                <customData>
                  <core:CustomData 
                    key="p13nData" 
                    value='\{"columnKey": "Werks", "maxLength": "4","columnIndex":"2", "isCurrency": false, "leadingProperty": "Werks", "sortProperty": "Werks", "type": "string"}' />
                </customData>
                <Label id="header-werks-label" text="{/#Remitos/Werks/@sap:label}" />
              </Column>
              <Column id="WerksNameCol" width="150px" hAlign="Begin">
                <customData>
                  <core:CustomData 
                    key="p13nData" 
                    value='\{"columnKey": "WerksName1", "maxLength": "30","columnIndex":"3", "isCurrency": false, "leadingProperty": "WerksName1", "sortProperty": "Werks", "type": "string"}' />
                </customData>
                <Label id="header-werksName-label" text="{/#Remitos/WerksName1/@sap:label}" />
              </Column>
              <!-- Custom XBRS Column -->
              <Column id="EntregaCol" width="auto" hAlign="Begin">
                <customData>
                  <core:CustomData
                    key="p13nData"
                    value='\{"columnKey": "Entrega", "maxLength": "10","columnIndex":"5", "isCurrency": false, "leadingProperty": "Entrega", "sortProperty": "Entrega", "type": "string"}' />
                </customData>
                <Label id="header-entrega-label" text="{/#Remitos/Entrega/@sap:label}" />
              </Column>
            </columns>
            <items>
            <!-- Custom Data Cells -->
              <ColumnListItem id="customDataColumnList">
                <cells>
                  <!-- Formatted Date = 'dd/mm/yyyy' -->
                  <Text id="Fecha-field" text="{path:'Fecha', formatter: '.formatter.dateFormat'}"/>
                  <!-- Custom Werks -->
                  <ObjectIdentifier id="Werks-field" title="{Werks}" />
                  <Text id="WerksName-field" text="{path: 'WerksName1', formatter:'.formatter.formatTitle'}"/>
                  <!-- Hyperlink to Cross-Application -->
                  <Link id="Entrega-field" emphasized="true" text="{Entrega}" press=".onPress"/>
                </cells>
              </ColumnListItem>
            </items> 
          </Table>
        </sap.ui.comp.smarttable:SmartTable>    
      </VBox>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>